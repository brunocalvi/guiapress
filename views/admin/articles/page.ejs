<%- include('../../partials/header.ejs'); %>
<%- include('../../partials/homeNavBar.ejs'); %>

<body>
  <div class="container">
    <hr>

    <% result.articles.rows.forEach(article => { %>
      <div class="card">
        <div class="card-header">
          <h2><%= article.title %></h2>
        </div>
        <div class="card-body">
          <a href="/<%= article.slug %>" class="btn btn-success">Ler artigos</a>
        </div>
      </div><br/>
    <% }); %>

    <div class="row">
      <div class="col col-md-12">

        <% if(result.page > 2) { %>
          <a href="/articles/page/<%= result.page - 1 %>" style="float: left;;" class="btn btn-warning"><< Prev</a>

        <% } else if(result.page == 2) { %>
          <a href="/" style="float: left;;" class="btn btn-warning"><< Prev</a>

        <% } %>
        <% if(result.next){ %>
          <a href="/articles/page/<%= result.page + 1 %>" style="float: right;" class="btn btn-warning">Next >></a>

        <% } %> 
      </div>
    </div>
    <hr/>

  </div>
</body>

<%- include('../../partials/footer.ejs'); %>